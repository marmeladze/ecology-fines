<p id="notice"><%= notice %></p>

<h1>Listing Classifications</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classifications.each do |classification| %>
      <tr>
        <td><%= classification.name %></td>
        <td><%= link_to 'Edit', edit_admin_classification_path(classification) %></td>
        <td><%= link_to 'Destroy', admin_classification_path(classification), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Classification', new_admin_classification_path %>
