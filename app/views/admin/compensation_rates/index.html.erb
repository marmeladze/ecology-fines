<p id="notice"><%= notice %></p>

<h1>Listing Compensation Rates</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nırx dərəcəsi</th>
      <th>Ağac</th>
      <th colspan="3">İşlək oduncaq [AZN/m<sup>3</sup>]</th>
      <th>Odun [AZN/m<sup>3</sup>]</th>
      <th>Tullantı [AZN/m<sup>3</sup>]</th>
      <th>Çətir [AZN/m<sup>3</sup>]</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compensation_rates.each do |compensation_rate| %>
      <tr>
        <td><%= compensation_rate.tariff.name %></td>
        <td><%= compensation_rate.tree.name %></td>
        <td><%= compensation_rate.large_price %></td>
        <td><%= compensation_rate.mid_price %></td>
        <td><%= compensation_rate.small_price %></td>
        <td><%= compensation_rate.combustible_price %></td>
        <td><%= compensation_rate.garbage_price %></td>
        <td><%= compensation_rate.umbrella_price %></td>
        <td><%= link_to 'Edit', edit_admin_compensation_rate_path(compensation_rate) %></td>
        <td><%= link_to 'Destroy', admin_compensation_rate_path(compensation_rate), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

