<p id="notice"><%= notice %></p>

<h1>Listing Detours</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @detours.each do |detour| %>
      <tr>
        <td><%= link_to 'Show', detour %></td>
        <td><%= link_to 'Edit', edit_detour_path(detour) %></td>
        <td><%= link_to 'Destroy', detour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

