<%= form_for [:admin, @height_range] do |f| %>
  <% if @height_range.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@height_range.errors.count, "error") %> prohibited this height_range from being saved:</h2>

      <ul>
      <% @height_range.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="field">
     <%= f.label :classification %>
     <%= f.select :classification_id, @classifications, :prompt => "Birini seç" %>
  </div>

  <div class="field">
     <%= f.label :tree %>
     <%= f.select :tree_id, @trees, :prompt => "Birini seç" %>
  </div>

  <div class="field">
     <%= f.label :range_min %>
     <% if @height_range.new_record? %>
       <%= number_field_tag(:range_min, 5.0, in: 5...50, step: 0.1) %>
     <% else %>
       <%= number_field_tag(:range_min, @height_range.lower, in: 5...50, step: 0.1) %>
     <% end %>

  </div>

  <div class="field">
     <%= f.label :range_max %>
     <% if @height_range.new_record? %>
       <%= number_field_tag(:range_max, 7.0, in: 5...50, step: 0.1) %>
     <% else %>
       <%= number_field_tag(:range_max, @height_range.upper, in: 5...50, step: 0.1) %>
     <% end %>
  </div>

  <div class="field">
     <%= f.label :diameter %>
     <%= number_field_tag("height_range[diameter]", @height_range.diameter, in: 8...100, step: 4) %>
  </div> 
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
