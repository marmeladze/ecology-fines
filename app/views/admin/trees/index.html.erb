<p id="notice"><%= notice %></p>

<h1>Ağac növləri</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Adı</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trees.each do |tree| %>
      <tr>
        <td><%= tree.name %></td>
        <td><%= link_to 'Edit', edit_admin_tree_path(tree) %></td>
        <td><%= link_to 'Destroy', admin_tree_path(tree), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tree', new_admin_tree_path, class: 'btn btn-info' %>
